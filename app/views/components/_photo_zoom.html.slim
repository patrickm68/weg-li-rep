span.zoom(style="position: relative; overflow: hidden; display: inline-block;")
  = image_tag('404.jpg', class: 'modal-photo', style: 'max-height: 80vh', data: {src: url_for_photo(photo, size: :default)})

= hint do
  = "#{photo.filename} / #{number_to_human_size(photo.byte_size)}"

javascript:
  $('#photo_modal_#{photo.id}').on('show.bs.modal', function () {
    $('#photo_modal_#{photo.id} .modal-photo').attr('src', $('#photo_modal_#{photo.id} .modal-photo').data('src'));
    $('#photo_modal_#{photo.id} .zoom').zoom();
  })
