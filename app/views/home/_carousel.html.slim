.row.steps.step-2(style="display:none")
  .col-lg-1.text-left
    ul.pagination.pagination-lg
      li.previous
        a.text-muted(href="#" onclick="$('.steps').hide();$('.step-1').fadeIn(); return false;" style="text-decoration: none;") <
  .col-lg-10
    .row
      .col-lg-2.text-center
        .spacer
