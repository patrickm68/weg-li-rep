.row
  .col-lg-6
    h3 Registrierte Benutzer
    .well.well-chart.ct-chart.chart-users
  .col-lg-6
    h3 Aktive Benutzer
    .well.well-chart.ct-chart.chart-users-active

.row
  .col-lg-6
    h3 Versendete Anzeigen
