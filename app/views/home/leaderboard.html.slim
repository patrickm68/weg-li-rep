.page-header
  h1 weg-li Leaderboard

.row
  .col-lg-6
    h3 ðŸ¥‡ Wochen-Lead:
    ul.list-group
      - @weekly_leaders.each_with_index do |(user, current), index|
        li.list-group-item
          - goal = @weekly_leaders.first.last
          .badge.pull-right #{number_with_delimiter(current)} Anzeigen
          p
            strong=> "#{index+1}. #{user.public_nickname}"
          .progress.progress-striped
            .progress-bar.progress-bar-danger(style="width: #{[100, current / (goal.fdiv(100))].min}%")
